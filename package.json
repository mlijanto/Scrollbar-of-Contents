{
  "name": "scrollbar-of-contents",
  "author": "Martin Lijanto",
  "version": "0.4.0",
  "license": "MIT",
  "description": "Scrollbar of Contents is a Chrome extension that creates clickable markers for all the headings of a page and places them proportionately next to the scrollbar.",
  "repository": {
    "type": "git",
    "url": "https://github.com/mlijanto/scrollbar-of-contents.git"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.266",
    "@types/jest": "^29.5.12",
    "autoprefixer": "^10.4.19",
    "copy-webpack-plugin": "^12.0.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "source-map-loader": "^5.0.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "rimraf build && npx webpack"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  }
}
